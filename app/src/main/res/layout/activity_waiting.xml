<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitingActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/responderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/waiting_on_response"/>

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/cancel"/>

    <ImageView
        android:id="@+id/recordIconBg"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        android:layout_above="@+id/cancelBtn"
        android:layout_below="@+id/responderView"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/recordIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        android:layout_above="@+id/cancelBtn"
        android:layout_below="@+id/responderView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/recordingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/responderView"
        android:layout_marginBottom="100dp"/>


</RelativeLayout>